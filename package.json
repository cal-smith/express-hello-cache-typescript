{
  "name": "express-hello-world",
  "version": "1.0.0",
  "description": "Express Hello World on Render",
  "main": "app.js",
  "repository": "https://github.com/render-examples/express-hello-world",
  "author": "Render Developers",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node dist/app.js",
    "dev": "concurrently 'pnpm run build:css:watch' 'tsnd --respawn app.ts'",
    "build": "concurrently 'pnpm run build:css' tsc",
    "build:css": "postcss input.css -o public/styles.css",
    "build:css:watch": "postcss input.css -o public/styles.css --watch"
  },
  "dependencies": {
    "express": "^5.0.0",
    "express-handlebars": "^8.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  }
}
